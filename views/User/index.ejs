                                <a class="btn btn-primary btn-hover-dark" href="/shop">Shop Now</a>
                            </div>
                        </div>
                        <!-- Single Banner End -->
                    </div>
                    <div class="col-lg-9">
                        <!-- Product Wrapper Start -->
                        <div class="product-wrapper product-active">
                            <!-- Product Top Wrapper Start -->
                            <div class="product-top-wrapper">
                                <!-- Section Title Start -->
                                <div class="section-title order-md-1">
                                    <h2 class="title"># New Products</h2>
                                </div>
                                <!-- Section Title End -->

                            
                                
                            </div>
                            <!-- Product Top Wrapper End -->

                            <!-- Product Tabs Content Start -->
                            <div class="product-tabs-content">
                                <div class="tab-content">
                                    <div class="tab-pane fade show active" id="tab1">
                                        <div class="swiper-container">
                                            <div class="swiper-wrapper">
                                                <% const currentDate = new Date(); %>
<% const tenDaysAgo = new Date(currentDate); %>
<% tenDaysAgo.setDate(currentDate.getDate() - 5); %>

                                                <% for( let index = productdata.length-1; index >= productdata.length-4; index-- ) { %>  

                                                <div class="swiper-slide">
                                                    <!-- Single Product Start -->
                                                        <div class="single-product">
                                                            <% if (productdata[index].stock<10 && productdata[index].stock!== 0  ) { %>
                                                                <span  class="stock-tag">Only <%= productdata[index].stock %> left !!</span>
                                                            <% } %>
                                                            <% const productDate = new Date(productdata[index].date); %>
                                                            <% if (productDate >= tenDaysAgo) { %>
                                                                <span  class="day-tag">New</span>
                                                            <% } %>
                                                            <% if (productdata[index].stock==0) { %>
                                                                <span  class="stock-tag">No stock !!</span>
                                                            <% } %>
                                                            <a href="/product/<%= productdata[index].id %>"><img src="/imgs/uploads/<%= productdata[index].image[0]%>" width="270" height="303" alt="product" /></a>
                                                            <div class="product-content">
                                                                <h4 class="title">
                                                                    <a href="/product/<%= productdata[index].id %>"><%= productdata[index].name %></a>
                                                                </h4>
                                                                <div class="text-danger " style="font-size: x-small;" id="errornumber"></div>
                                                                    <input min="1" hidden  class="form-control" id="count<%= productdata[index]._id %>" type="number" value="1" />
                                                                <div class="price">
                                                                    <span
                                                                            class="sale-price"
                                                                            ><%= productdata[index].price.toFixed(2) %></span>
                                                                </div>
                                                            </div>
                                                            <ul class="product-meta">
                                                        
                                                                <li>
                                                                    <a  onclick="addtocart('<%= productdata[index]._id %>')" class="action" title="Add to cart"><i
                                                                        class="pe-7s-shopbag"
                                                                    ></i></a>
                                                                </li>
                                                                <li>
                                                                    <a  onclick="addtowishlist('<%= productdata[index]._id %>')" class="action" title="Add to wishlist"><i
                                                                        class="pe-7s-like"
                                                                    ></i></a>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    <!-- Single Product End -->
                                                </div>
                                                <% } %>
                                                
                                            </div>
                                        </div>
                                    </div>
                                    
                                    
                                </div>
                            </div>
                            <!-- Product Tabs Content End -->
                        </div>
                        <!-- Product Wrapper End -->
                    </div>
                </div>
            </div>
            <!-- Product Section Wrapper End -->
        </div>
    </div>

                                            <% if (order[index].orderStatus !== 'canceled' && order[index].orderStatus !== 'delivered' && order[index].orderStatus !== 'returned') { %>
                                                <button type="button" onclick="cancelorder('<%= order[index]._id %>','<%= index %>')" id="cancel<%= index %>" class="" style="background-color: #dc3545; color: #fff; font-size: 14px; border: none; padding: 8px 16px; border-radius: 4px;">Cancel order</button>

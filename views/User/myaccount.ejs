                                            <% } %>
                                            <% if (order[index].orderStatus !== 'canceled' && order[index].orderStatus !== 'returned' && order[index].orderStatus !== 'pending') { %>
                                                <a type="button" href="/invoice?id=<%= order[index]._id %>" style="background-color: #0f741e; color: #fff; font-size: 14px; border: none; padding: 8px 16px; border-radius: 4px;">Download Invoice</a>
